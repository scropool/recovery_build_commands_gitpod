sudo apt-get update
sudo apt-get install repo git rsync bc bison build-essential curl flex gnupg gperf imagemagick lib32ncurses5-dev lib32z1-dev liblz4-tool libncurses5-dev libsdl1.2-dev libssl-dev libxml2 libxml2-utils lzop pngcrush rsync schedtool squashfs-tools xsltproc zip zlib1g-dev
git clone https://github.com/minimal-manifest-twrp/platform_manifest_twrp_aosp.git twrp
cd twrp
repo init --depth=1 -u https://github.com/minimal-manifest-twrp/platform_manifest_twrp_aosp.git -b twrp-12.1
repo sync
git clone https://github.com/YZBruh/recovery_device_samsung_a24
mkdir -p device/samsung/a24 && mv a24/ device/samsung/a24 && rm -rf *a24
export ALLOW_MISSING_DEPENDENCIES=true \
. build/envsetup.sh \
&& lunch twrp_a24-eng \
&& make clean \
&& make -j16 recoveryimage
